{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Database Schema Contract",
  "description": "Contract definition for database schema validation",
  "type": "object",
  "properties": {
    "tables": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "columns": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                },
                "nullable": {
                  "type": "boolean"
                }
              }
            }
          }
        },
        "required": ["name", "columns"]
      }
    }
  },
  "required": ["tables"]
}
