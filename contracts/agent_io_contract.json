{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Input/Output Contract",
  "description": "Contract definition for agent input and output validation",
  "type": "object",
  "properties": {
    "input": {
      "type": "object",
      "properties": {
        "query": {
          "type": "string",
          "description": "Natural language query"
        },
        "context": {
          "type": "object",
          "description": "Additional context for the agent"
        }
      },
      "required": ["query"]
    },
    "output": {
      "type": "object",
      "properties": {
        "sql": {
          "type": "string",
          "description": "Generated SQL query"
        },
        "reasoning": {
          "type": "string",
          "description": "Explanation of the generated query"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "required": ["sql"]
    }
  }
}
